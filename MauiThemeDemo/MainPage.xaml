<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiThemeDemo.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a hovercraft number nine"
                Source="dotnet_bot.png" />

            <Label SemanticProperties.HeadingLevel="Level1" Text="Hello, World!" />

            <Label
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Text="Welcome to .NET Multi-platform App UI" />

            <Button
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Counts the number of times you click"
                Text="Click me" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="25">
                <Button
                    BackgroundColor="{StaticResource LightButton}"
                    BorderColor="{StaticResource LightButtonText}"
                    BorderWidth="1"
                    Clicked="OnThemeClicked"
                    Text="Light"
                    TextColor="{StaticResource LightButtonText}" />
                <Button
                    BackgroundColor="{StaticResource RedButton}"
                    BorderColor="{StaticResource RedButtonText}"
                    BorderWidth="1"
                    Clicked="OnThemeClicked"
                    Text="Red"
                    TextColor="{StaticResource RedButtonText}" />
                <Button
                    BackgroundColor="{StaticResource BlueButton}"
                    BorderColor="{StaticResource BlueButtonText}"
                    BorderWidth="1"
                    Clicked="OnThemeClicked"
                    Text="Blue"
                    TextColor="{StaticResource BlueButtonText}" />
                <Button
                    BackgroundColor="{StaticResource DarkButton}"
                    BorderColor="{StaticResource DarkButtonText}"
                    BorderWidth="1"
                    Clicked="OnThemeClicked"
                    Text="Dark"
                    TextColor="{StaticResource DarkButtonText}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
